<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/launchActivity_backgroundColor"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/launchActivity_textImageView"
        android:layout_width="262dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:contentDescription="@string/content_description_place_holder"
        android:src="@drawable/launch_screen_text_logo" />

    <ImageView
        android:id="@+id/launchActivity_logoImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="134dp"
        android:contentDescription="@string/content_description_place_holder"
        android:src="@drawable/beep_head_outlined_image" />

</LinearLayout>