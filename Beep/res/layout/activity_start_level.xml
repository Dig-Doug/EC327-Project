<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/startLevelActivity_toWordImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/startLevelActivity_fromWordImageView"
        android:layout_marginRight="44dp"
        android:contentDescription="@string/content_description_place_holder"
        android:src="@drawable/ss_viking" />

    <TextView
        android:id="@+id/startLevelClicks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startLevelStartButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="@string/startLevelActivityClicks"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/startLevelClicksNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startLevelClicks"
        android:layout_centerHorizontal="true"
        android:text="@string/startLevelActivityClicksNumber"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/startLevelBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/startLevelActivity_toWordImageView"
        android:layout_marginBottom="29dp"
        android:text="@string/startLevelActivityBackButton" />

    <ImageView
        android:id="@+id/startLevelActivity_fromWordImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp"
        android:layout_toLeftOf="@+id/startLevelClicksNumber"
        android:contentDescription="@string/content_description_place_holder"
        android:src="@drawable/ss_apple" />

    <TextView
        android:id="@+id/startLevelActivity_toWordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/startLevelActivity_startWordTextView"
        android:layout_alignBottom="@+id/startLevelActivity_startWordTextView"
        android:layout_alignLeft="@+id/startLevelActivity_toWordImageView"
        android:layout_alignRight="@+id/startLevelActivity_toWordImageView"
        android:text="@string/startLevelActivityObject2"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/startLevelActivity_startWordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startLevelActivity_fromWordImageView"
        android:layout_alignRight="@+id/startLevelActivity_fromWordImageView"
        android:layout_below="@+id/startLevelActivity_fromWordImageView"
        android:layout_marginTop="22dp"
        android:text="@string/startLevelActivityObject1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/startLevelStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startLevelBackButton"
        android:layout_alignRight="@+id/startLevelBackButton"
        android:layout_marginBottom="15dp"
        android:text="@string/startLevelActivityStartButton" />

</RelativeLayout>