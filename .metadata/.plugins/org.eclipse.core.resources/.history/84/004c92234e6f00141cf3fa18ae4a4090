package com.beep_boop.gameMap;

import java.io.IOException;
import java.util.ArrayList;

import org.xmlpull.v1.XmlPullParser;
import org.xmlpull.v1.XmlPullParserException;

public class MapNodeLoader
{
	///-----Interfaces-----
	
	///-----Members-----
	/*** XML namespace used in the file. */
	private static final String NAMESPACE = null;
	/** Tag for the node array */
	private static final String TAG_NODES_ARRAY;
	/** Tag for an individual node */
	private static final String TAG_NODE;
	/** Tag for an individual node’s location X */
	private static final String TAG_NODE_LOCATION_X;
	/** Tag for an individual node’s location Y */
	private static final String TAG_NODE_LOCATION_Y;
	/** Tag for an individual node’s level KEY*/
	private static final String TAG_NODE_LEVEL_KEY;
	
	///-----Constructors-----

	///-----Functions-----
	public static ArrayList<MapNode> parseFile(InputSteam aIn, String aFileName);
	private static ArrayList<MapNode> parseNodes(XmlPullParser parser) throws XmlPullParserException, IOException;
	private static MapNode parseNode(XmlPullParser parser) throws XmlPullParserException, IOException;
	private static float readFloat(XmlPullParser parser, String aInsideTag) throws XmlPullParserException, IOException;
	private static String readString(XmlPullParser parser, String aInsideTag) throws XmlPullParserException, IOException;
	private static String wrapTag(String aInside, boolean aEnd);
	///-----Child Classes-----
}
